<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">

	<androidx.constraintlayout.widget.ConstraintLayout
		android:id="@+id/cl_rv_home"
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<com.google.android.material.card.MaterialCardView
			android:id="@+id/cv_rv_home_image_case"
			android:layout_width="70dp"
			android:layout_height="70dp"
			android:layout_marginStart="5dp"
			android:layout_marginEnd="5dp"
			app:cardBackgroundColor="@color/white"
			app:cardCornerRadius="10dp"
			app:cardElevation="3dp"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toTopOf="parent">


			<ImageView
				android:id="@+id/iv_rv_home_image"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:scaleType="centerCrop" />
		</com.google.android.material.card.MaterialCardView>

		<TextView
			android:id="@+id/tv_rv_home_name"
			android:paddingTop="10dp"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="20dp"
			android:gravity="start"
			android:textAppearance="@style/TextAppearance.AppCompat.Large"
			android:textStyle="bold"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/cv_rv_home_image_case"
			app:layout_constraintTop_toTopOf="parent"
			tools:text="12" />

		<TextView
			android:id="@+id/tv_rv_home_price"
			android:textColor="@color/text_border"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:layout_marginStart="20dp"
			android:gravity="start"
			android:textStyle="bold"
			app:layout_constraintBottom_toBottomOf="parent"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/cv_rv_home_image_case"
			app:layout_constraintTop_toBottomOf="@id/tv_rv_home_name"
			tools:text="12" />
	</androidx.constraintlayout.widget.ConstraintLayout>


	<com.google.android.material.divider.MaterialDivider
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		app:dividerColor="@color/gray" />
</LinearLayout>



