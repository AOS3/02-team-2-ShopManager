<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="SearchViewTextStyle" parent="Widget.AppCompat.SearchView">
		<item name="editTextColor">@color/white</item>
		<item name="android:textColorHint">@color/white</item>
	</style>

	<style name="CustomMaterialDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
		<item name="android:background">@color/white</item>
		<item name="materialAlertDialogBodyTextStyle">@style/DialogMessageText</item>
	</style>

	<style name="BtnSaveStyle" parent="Widget.AppCompat.Button.Borderless">
		<item name="android:background">@drawable/selector_btn_save</item>
		<item name="android:textColor">@color/selector_btn_text_color</item>
		<item name="android:textStyle">bold</item>
		<item name="android:textSize">14sp</item>
	</style>


	<style name="DialogMessageText" parent="TextAppearance.MaterialComponents.Body2">
		<item name="android:textColor">#F47272</item>
	</style>

</resources>